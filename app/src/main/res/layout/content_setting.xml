<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change user ID:"
        android:id="@+id/textFileHeading"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/setting_button1"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/setting_button2"
        android:layout_alignStart="@+id/setting_button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New ID:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textFileHeading"
        android:layout_alignLeft="@+id/textFileHeading"
        android:layout_alignStart="@+id/textFileHeading"
        android:layout_marginTop="21dp" />
    <EditText
        android:id="@+id/edit_id"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/setting_editText"
        android:layout_alignEnd="@+id/setting_editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Google Drive Info:"
        android:id="@+id/textView4"
        android:layout_above="@+id/setting_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/setting_editText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username:"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/setting_editText"
        android:layout_alignBottom="@+id/setting_editText"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password:"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/setting_editText2"
        android:layout_toLeftOf="@+id/setting_editText2"
        android:layout_toStartOf="@+id/setting_editText2" />

    <EditText
        android:id="@+id/setting_editText2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/setting_editText"
        android:layout_alignLeft="@+id/setting_editText"
        android:layout_alignStart="@+id/setting_editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/setting_button2"
        android:layout_below="@+id/setting_editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>